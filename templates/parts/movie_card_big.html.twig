        <img src="{#{{ media.coverImage }}#}" class="h-80 object-cover" alt="{{ media.title }}">
        
        <div class="w-full h-full bg-white px-3 py-3 flex items-center justify-between border-t-2 border-t-red-600">
            <span class="capitalize font-medium pr-2">
                {{ media.title }} <span class="opacity-40 text-xs">({{ media.releaseDate|date('Y') }})</span>
            </span>
            <div class="flex space-x-2 items-center text-xs">
                <span>{{ media.rating ?? 'N/A' }}</span> {# Affichez le rating si disponible #}
